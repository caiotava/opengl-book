{
  "version": 2,
  "configurePresets": [
    {
      "name": "common",
      "inherits": "vcpkg",
      "environment": {
        "VCPKG_ROOT": "$env{HOME}/.vcpkg-clion/vcpkg",
        "EMSDK_ROOT": "$env{HOME}/src/emsdk"
      }
    },
    {
      "name": "Debug",
      "inherits": "common",
      "binaryDir": "${sourceDir}/cmake-build-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "Release",
      "inherits": "common",
      "binaryDir": "${sourceDir}/cmake-build-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "Emscripten Debug",
      "inherits": "common",
      "binaryDir": "${sourceDir}/cmake-build-ems-debug",
      "cacheVariables": {
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "$env{EMSDK_ROOT}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
        "EMSCRIPTEN": "1",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "Emscripten Release",
      "inherits": "common",
      "binaryDir": "${sourceDir}/cmake-build-ems-release",
      "cacheVariables": {
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "$env{EMSDK_ROOT}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
        "EMSCRIPTEN": "1",
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}